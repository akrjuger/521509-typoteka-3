extends ../layouts/default.pug

block content
  main
    section.search-page
      .search-page__wrapper
        h1 Поиск
        .search.search-page__form
          form(action='/search' method='get')
            label
              input(type='query' name=`query` placeholder='Что ищем?' value=searchText)
            button.search__button.button.button--transparent(type='submit') Найти
          .search__result
            each result in results
              time.search__date(datetime=result.createdAt) #{result.createdAt}
              a.search__link(href=`/articles/${result.id}`)
                | #{result.title}
            else
              if searchText
                p.search-page__empty Ничего не нашлось
